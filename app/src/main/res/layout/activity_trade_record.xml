<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.mmy.maimaiyun.model.personal.ui.activity.TradeRecordActivity">

    <include layout="@layout/toolbar_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/clazz_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="全部记录"/>

        <ImageView
            android:id="@+id/clazz_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/shopping_bottom_normal"/>
    </LinearLayout>

    <com.mmy.maimaiyun.customview.LoadingSmartLayout
        android:id="@+id/loading_smart_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>
</LinearLayout>
